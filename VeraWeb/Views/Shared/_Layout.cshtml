<!DOCTYPE html>
<html>
<head>
    <partial name="_PageHeadElement"/>
    
    @RenderSection("Styles", required: false)
    @RenderSection("HeadScripts", required: false)
</head>
<body>
    <partial name="_GoogleTagManagerBodyElement" />

    <partial name="_Sidenav"/>
    <div class="main-content">
        <partial name="Topnav/_Topnav"/>
        
        <!-- Header -->
        <div class="header bg-primary pb-6">
            <div class="container-fluid">
                <div class="header-body">
                    <!-- 1st Row: Crumbs and filters -->
                    <div class="row align-items-center py-4">
                        <div class="col-lg-3 col-3">
                            <div class="input-field col">
                                <select>
                                    <option value="" disabled selected>Selecciona su opcion</option>
                                    <option value="1">Casa</option>
                                    <option value="2">Departamento</option>
                                    <option value="3">Loft</option>
                                </select> 
                            </div>
                        </div>

                        <div class="col-lg-5 col-5">
                            @RenderSection("Search", required: false)
                        </div>
                        <div class="col-lg-1 col-1">

                        </div>

                        <div class="col-lg-3 col-3">
                            <a href="#" class="btn btn-md btn-neutral">Buscar mi propiedad</a>
                        </div>
                    </div>
                    @RenderSection("DashboardCards", required: false)
                </div>
            </div>
        </div>
        
        <!-- Page content -->
        <div class="container-fluid mt--6">
            <!-- Page content -->
            @RenderBody()
            <partial name="_Footer" />
        </div>
    </div>
    
    <partial name="_ThemeScripts" />

    @RenderSection("Scripts", required: false)
</body>
</html>
